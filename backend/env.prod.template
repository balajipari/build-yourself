# Production Environment Configuration
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://builduser:buildpass123@postgres:5432/build_yourself
REDIS_URL=redis://redis:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/callback

# Frontend URLs
FRONTEND_BASE_URL=http://localhost:5173
FRONTEND_DASHBOARD_URL=http://localhost:5173/dashboard
FRONTEND_CALLBACK_URL=http://localhost:5173/auth/callback
FRONTEND_SIGNIN_URL=http://localhost:5173/signin

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=False
ENVIRONMENT=production

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:5000"]

# API Configuration
API_PREFIX=/api/v1
API_TITLE=Build Yourself API
API_DESCRIPTION=API for building your customs
API_VERSION=0.1.0

# Feature Flags
ENABLE_LLM_VALIDATION=true

# Model Configuration
OPENAI_CHAT_MODEL=gpt-4.1-mini
OPENAI_IMAGE_MODEL=gpt-4.1-mini
OPENAI_VALIDATION_MODEL=gpt-4.1-mini

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
